{
  "manifest_version": 2,
  "name": "YouTube playlist by time interval",
  "version": "1.0.0",
  "description": "Allows you to create YouTube playlist based on time interval.",
  "icons": {
    "32": "icons/youtube_playlist_icon.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/youtube_playlist_icon.png",
    "default_title": "YTP",
    "default_popup": "popup.html",
    "browser_style": true
  },
  "background": {
    "scripts": [
      "background_scripts.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content_scripts.js"]
    }
  ],
  "host_permissions": [
    "tabs",
    "notifications",
    "http://www.youtube.com/",
    "https://www.youtube.com/"
  ]
}
