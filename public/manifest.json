{
  "manifest_version": 2,
  "name": "Webpack Example",
  "version": "1.0.0",
  "description": "A minimal example of how to use npm modules from within a WebExtension.",
  "icons": {
    "32": "icons/leftpad-32.png"
  },
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icons/leftpad-32.png",
    "default_title": "YTP",
    "default_popup": "popup.html",
    "browser_style": true
  },
  "background": {
    "scripts": [
      "background_scripts.js"
    ]
  },
  "host_permissions": [
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ]
}
